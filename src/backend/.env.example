# API Server Configuration
PORT=3001
API_KEY=your_secure_api_key_here

# Storage Configuration
# Options: hybrid (default), postgresql, yaml
STORAGE_TYPE=hybrid

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rollingcodes
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_SSL=false

# Filesystem Storage (used when PostgreSQL unavailable or STORAGE_TYPE=yaml)
STORAGE_BASE_DIR=../web/public/articles

# LLM API Configuration (for article generation worker)
# Choose one of the following:

# Option 1: Anthropic Claude API
LLM_ENDPOINT=https://api.anthropic.com/v1/messages
LLM_API_KEY=your_anthropic_api_key_here
LLM_MODEL=claude-3-5-sonnet-20241022

# Option 2: OpenAI API (or OpenAI-compatible endpoint)
# LLM_ENDPOINT=https://api.openai.com/v1/chat/completions
# LLM_API_KEY=your_openai_api_key_here
# LLM_MODEL=gpt-4-turbo-preview

# Debug mode (set to 'true' for verbose logging)
DEBUG=false
